# ===========================
# Django Environment Configuration
# ===========================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ===========================
# Django Settings
# ===========================
DJANGO_ENVIRONMENT=local
DEBUG=True
SECRET_KEY=django-insecure-your-dev-key-min-50-chars-random-for-prod

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*.local

# ===========================
# Database (PostgreSQL)
# ===========================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=project_db
DB_USER=project_user
DB_PASSWORD=secure_password_here
DB_HOST=localhost
DB_PORT=5432

# ===========================
# Redis Cache & Message Broker
# ===========================
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379/0
CACHE_URL=redis://:redis_password@localhost:6379/1

# ===========================
# Celery Configuration
# ===========================
CELERY_BROKER_URL=redis://:redis_password@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:redis_password@localhost:6379/0
CELERY_TIMEZONE=UTC
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=1800

# ===========================
# JWT Authentication
# ===========================
JWT_SECRET_KEY=your-jwt-secret-key-min-50-chars-random
JWT_ALGORITHM=HS256

# ===========================
# Email Configuration
# ===========================
# For local development use console backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production use SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@localhost.com

# ===========================
# Security Settings
# ===========================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO

# ===========================
# CORS Configuration
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# ===========================
# Monitoring & Error Tracking
# ===========================
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ===========================
# Flower (Celery Monitoring)
# ===========================
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# ===========================
# Docker/Container Settings
# ===========================
DOCKER_ENVIRONMENT=local
DOCKER_COMPOSE_VERSION=3.10

# ===========================
# Admin User
# ===========================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# ===========================
# AWS Configuration (Optional)
# ===========================
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_S3_REGION_NAME=us-east-1

# ===========================
# API Documentation
# ===========================
API_TITLE=Project API
API_DESCRIPTION=Modern Django REST API
API_VERSION=1.0.0

# ===========================
# Testing Configuration
# ===========================
TESTING=False
TEST_DATABASE_NAME=project_test_db
