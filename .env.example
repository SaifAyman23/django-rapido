# ===========================
# Django Environment Configuration
# ===========================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ===========================
# Django Settings
# ===========================
DJANGO_ENVIRONMENT=local
DEBUG=True
SECRET_KEY=django-insecure-change-me-in-production-use-strong-key

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,*.local

# ===========================
# Database (PostgreSQL)
# ===========================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=project_db
DB_USER=project_user
DB_PASSWORD=secure_password_here
# For Docker: use service name; for local dev: use localhost
DB_HOST=db
DB_PORT=5432

# ===========================
# Redis Cache & Message Broker
# ===========================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CACHE_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/1

# ===========================
# Celery Configuration
# ===========================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@${REDIS_HOST}:${REDIS_PORT}/0
CELERY_TIMEZONE=UTC
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=1800

# ===========================
# JWT Authentication  
# ===========================
JWT_SECRET_KEY=your-jwt-secret-key-min-50-chars-random-string-here
JWT_ALGORITHM=HS256

# ===========================
# Email Configuration
# ===========================
# Local development: prints to stdout
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# Production: uncomment and configure SMTP
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password
# EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@localhost.com

# ===========================
# Security Settings
# ===========================
# Set to True in production with HTTPS
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO

# ===========================
# CORS Configuration
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
CORS_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ===========================
# Monitoring & Error Tracking
# ===========================
# Uncomment and add your Sentry DSN for error tracking in production
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# ===========================
# Flower (Celery Monitoring Dashboard)
# ===========================
FLOWER_USER=admin
FLOWER_PASSWORD=admin123

# ===========================
# Django Superuser (Auto-created in local development)
# ===========================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=admin123

# ===========================
# AWS S3 Configuration (Optional)
# ===========================
# Uncomment and configure for S3 static/media storage
# AWS_ACCESS_KEY_ID=your-key
# AWS_SECRET_ACCESS_KEY=your-secret
# AWS_STORAGE_BUCKET_NAME=your-bucket
# AWS_S3_REGION_NAME=us-east-1

# ===========================
# API Documentation
# ===========================
API_TITLE=Project API
API_DESCRIPTION=Modern Django REST API
API_VERSION=1.0.0

# ===========================
# Testing Configuration
# ===========================
TESTING=False
TEST_DATABASE_NAME=project_test_db
