# ===========================
# Django Environment Configuration
# ===========================
# Copy this file to .env and update with your values
# DO NOT commit .env to version control

# ===========================
# Django Settings
# ===========================
DJANGO_ENVIRONMENT=local
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,.localhost,.local

# ===========================
# Database (PostgreSQL)
# ===========================
DB_ENGINE=django.db.backends.postgresql
DB_NAME=your_db_name
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# ===========================
# Redis Cache & Message Broker
# ===========================
REDIS_PASSWORD=your-redis-password
REDIS_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
CACHE_URL=redis://:${REDIS_PASSWORD}@localhost:6379/1

# ===========================
# Celery Configuration
# ===========================
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@localhost:6379/0
CELERY_TIMEZONE=UTC
CELERY_TASK_TRACK_STARTED=True
CELERY_TASK_TIME_LIMIT=1800

# ===========================
# JWT Authentication  
# ===========================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256

# ===========================
# Email Configuration
# ===========================
# For local development use console backend
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production use SMTP (uncomment and configure)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
EMAIL_USE_TLS=True
DEFAULT_FROM_EMAIL=noreply@yourdomain.com

# ===========================
# Security Settings (Development only - adjust for production)
# ===========================
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False
SECURE_HSTS_SECONDS=0

# ===========================
# Logging
# ===========================
LOG_LEVEL=INFO

# ===========================
# CORS Configuration
# ===========================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000
CORS_TRUSTED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# ===========================
# Monitoring & Error Tracking
# ===========================
# SENTRY_DSN=https://your-sentry-key@sentry.io/your-project-id

# ===========================
# Flower (Celery Monitoring)
# ===========================
FLOWER_USER=admin
FLOWER_PASSWORD=change-this-password

# ===========================
# Docker/Container Settings
# ===========================
DOCKER_ENVIRONMENT=local

# ===========================
# Admin User (First-time setup)
# ===========================
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=change-this-admin-password

# ===========================
# Login Credentials (Legacy/Demo)
# ===========================
LOGIN_USERNAME=demo@example.com
LOGIN_PASSWORD=demo123

# ===========================
# AWS Configuration (Optional - uncomment if needed)
# ===========================
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-bucket-name
# AWS_S3_REGION_NAME=us-east-1

# ===========================
# API Documentation
# ===========================
API_TITLE=Your Project API
API_DESCRIPTION=Modern Django REST API
API_VERSION=1.0.0

# ===========================
# Testing Configuration
# ===========================
TESTING=False
TEST_DATABASE_NAME=test_${DB_NAME}